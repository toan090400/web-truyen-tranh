<%- include ('../../layout/headerAdmin.ejs'); -%>

<form action="/admin/products/update/<%= product.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Tên truyện</label>
        <input type="text" readonly name="name" value="<%= product.name %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Mô tả</label>
        <textarea name="description" class="form-control" placeholder="Mô tả" cols="30" rows="10"><%= product.description %></textarea>
        
    </div>
    <div class="form-group">
        <label for="name">Thể loại: </label>
        <%
            categorys.forEach( (item) =>{%>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" name="category_new" value="<%= item.name %>">
                        <label for="category"><%= item.name %></label>
                    </label>
                </div>
            <%})
        %>
    </div>
    
    <input type="hidden" name="id" value="<%= product.id %>" class="form-control">
    <input type="hidden" name="category" value="<%= product.category %>" class="form-control">
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<%- include ('../../layout/footerAdmin.ejs'); -%>