<%- include ('../../layout/headerAdmin.ejs'); -%>
<a href="/admin/categorys/category-trash">Khôi phục thể loại</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Tên thể loại</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Cập nhật</th>
            <th scope="col">Xóa</th>
        </tr>
    </thead>
    <tbody>
        <%
            categorys.forEach( (item) =>{%>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.description %></td>
                    <td>
                        <a class="btn btn-info" href="/admin/categorys/edit/<%= item.slug %>">Cập nhật</a>
                    </td>
                    <td>
                        <form action="/admin/categorys/delete/<%= item.slug %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-warning">Xóa</button>
                        </form>
                    </td>
                </tr>    
            <%});
        %>
    </tbody>
</table>

<%- include ('../../layout/footerAdmin.ejs'); -%>