<%- include ('../../layout/headerAdmin.ejs'); -%>

<a href="/admin/categorys/category-add">Thêm thể loại mới</a>
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên thể loại</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Cập nhật</th>
            <th scope="col">Xóa</th>
        </tr>
    </thead>
    <tbody>
        <%
            categorys.forEach( (item) =>{%>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.description %></td>
                    <td>
                        <form action="/admin/categorys/category-trash/restor/<%= item._id %>?_method=PATCH" method="POST">
                            <button type="submit" class="btn btn-success">Khôi phục</button>
                        </form>
                    </td>
                    <td>
                        <form action="/admin/categorys/category-trash/destroy/<%= item._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Xóa vĩnh viễn</button>
                        </form>
                    </td>
                </tr>    
            <%});
        %>
        
    </tbody>
</table>

<%- include ('../../layout/footerAdmin.ejs'); -%>