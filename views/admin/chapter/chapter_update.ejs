<%- include ('../../layout/headerAdmin.ejs'); -%>

<form action="/admin/chapters/update/<%= slug %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Số chương</label>
        <input type="text" readonly name="name" value="<%= name %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="name">Thuộc truyện</label>
        <input type="text" readonly name="product" value="<%= product %>" class="form-control">
    </div>
    <div class="form-group">
        <label for="description">Tóm tắt chương</label>
        <input type="text" name="description" value="<%= description %>" class="form-control">
        
    </div>
    
    <input type="hidden" name="id" value="<%= id %>" class="form-control">
    <button type="submit" class="btn btn-primary">Update</button>
</form>

