<%- include ('../../layout/headerAdmin.ejs'); -%>
<a href="/admin/chapters/chapter-trash">Khôi phục chương</a>
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Số chương</th>
            <th scope="col">Thuộc truyện</th>
            <th scope="col">Tên chương</th>
            <th scope="col">Nội dung</th>
            <th scope="col">Cập nhật</th>
            <th scope="col">Xóa</th>
        </tr>
    </thead>
    <tbody>
        <%
            chapters.forEach( (item) =>{%>
                <tr>
                    <td><%= item.name %></td>
                    <td><%= item.product %></td>
                    <td><%= item.description %></td>
                    <td>
                        <a class="btn btn-secondary" href="/admin/chapters/content/<%= item.id %>">Nội dung</a>
                    </td>
                    <td>
                        <a class="btn btn-info" href="/admin/chapters/edit/<%= item.id %>">Cập nhật</a>
                    </td>
                    <td>
                        <form action="/admin/chapters/delete/<%= item.slug %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-warning">Xóa</button>
                        </form>
                    </td>
                </tr>    
            <%});
        %>
    </tbody>
</table>
<%- include ('../../layout/footerAdmin.ejs'); -%>